@model FIFSApp.Models.Equipe

@{
    ViewBag.Title = "AddOrEdit";
    Layout = null;
}

<h3><b>Adicionar Equipe</b></h3>

@using (Html.BeginForm("AddOrEdit", "Equipe" ,FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);",data_restUrl = Url.Action("AddOrEdit", "Equipe", new { id=0}) }))//reset url
{
    @Html.AntiForgeryToken()
<div class="row">
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Imagem)

        <div class="col-md-6">
            <!--CAMPO SIGLA-->
            <div class="form-group">
                @Html.LabelFor(model => model.Sigla, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Sigla, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Sigla, "", new { @class = "text-danger" })
                </div>
            </div>
            <!--CAMPO NOME-->
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>
            <!--CAMPO SITUAÇÃO-->
            <div class="form-group">
                @Html.LabelFor(model => model.Situacao, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Situacao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Situacao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submeter" class="btn btn-default" />
                    @if (Model.Id != 0)
                    {
                        <a class="btn btn-success" onclick="atualizarNovaTabAdd('@Url.Action("AddOrEdit", "Equipe", new { id=0})', false)"><i class="fa fa-plus"></i>Novo Cadastro</a> 
                    }
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Imagem, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <img src="@Url.Content(Model.Imagem)" style="margin:10px" height="200" width="200" id="preVisualizacao" />
                    <input type="file" name="UploadImagem" accept="image/jpeg image.png" onchange="MostrarImagemPrevia(this, document.getElementById('preVisualizacao'))" />
                </div>
            </div>
        </div>
    <!--<div class="form-group">
        @Html.LabelFor(model => model.Carro_Id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Carro_Id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Carro_Id, "", new { @class = "text-danger" })
        </div>
        </div>-->
    </div>
</div>
}

