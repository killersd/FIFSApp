@model IEnumerable<FIFSApp.Models.Equipe>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}

<h3><b>Equipes</b></h3>
<<!--aqui é o que vai ser mostrado na tela-->
<table class="table table-striped table-condensed" id="tabelaEquipe">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sigla)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Situacao)
            </th>
            <!--<th>Mostra Coluna do ID dos carros associados a equipe
        @Html.DisplayNameFor(model => model.Carro_Id)
        </th>-->
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sigla)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Situacao)
        </td>

        <!--<td>
        @Html.DisplayFor(modelItem => item.Carro_Id)
        </td>-->

        <td>
            <a class="btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "Equipe", new{id=@item.Id})')"><i class="fa fa-pencil fa-lg"></i></a>
            <a class="btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "Equipe", new{id=@item.Id})')"><i class="fa fa-trash fa-lg"></i></a>
        </td>
    </tr>
}
        </tbody>
</table>
